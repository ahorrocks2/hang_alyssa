<div id="homescreen">
  <h1>Let's Hang?</h1>

  <div class="players">

    <%= form_tag games_path do %>
      <% @players.each do |p| %>
        <img src="<%= p.url %>" class="player_image">
        <%= radio_button_tag 'player', "#{p.name}" %>
      <% end %>
      <p>I'm feeling...</p>

      <%= submit_tag 'BOOKSMART', class: 'btn btn-info', data: { toggle: "tooltip", placement: 'left'}, title: "Random Dictionary Word" %>
      <%= submit_tag 'STREETSMART', class: 'btn btn-danger', data: { toggle: "tooltip", placement: 'right'}, title: "Random Country Word" %>
    <% end %>
  </div>

</div>
