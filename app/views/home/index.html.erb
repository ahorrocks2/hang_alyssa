<div id="homescreen">
  <h1>LET'S HANG, MAN</h1>
  <p>
    Select a player as collateral damage:
  </p>

  <div class="players">

    <%= form_tag games_path do %>

      <% @players.each do |p| %>
        <div class="player_options">
          <img src="<%= p.url %>" class="player_image"><br>
          <%= radio_button_tag 'player', "#{p.name}" %>
        </div>
      <% end %>

      <hr>

      <h3>I'm feeling...</h3>

      <div>
        <%= button_tag(type: 'submit', class: 'btn btn-default', data: { toggle: "tooltip", placement: 'left'}, title: "Guess a random book genre") do %>
          <i class="fa fa-book fa-3x"> BOOKSMART</i>
        <% end %>
      </div>
      <br>
      <div>
        <%= button_tag(value: 'street', type: 'submit', class: 'btn btn-default', data: { toggle: "tooltip", placement: 'right'}, title: "Guess a random country name") do %>
          <i class="fa fa-road fa-3x"> STREETSMART</i>
        <% end %>
      </div>

    <% end %>
  </div>

</div>
